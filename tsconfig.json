{
    "compilerOptions": {
        "outDir": "./dist/",
        "moduleResolution": "node",
        "types": ["node", "jest"],
        "noImplicitAny": true,
        "removeComments": true,
        "esModuleInterop": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "module": "ESNext",
        "strict": false,
        "target": "es6",
        "typeRoots": ["node_modules/@types"],
        "lib": ["es2017", "dom"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
