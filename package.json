{
    "name": "hello-week",
    "version": "3.0.0",
    "description": "Lightweight and simple calendar with no dependencies in pure JavaScript",
    "license": "MIT",
    "repository": "https://github.com/maurovieirareis/hello-week",
    "keywords": [
        "lightweight",
        "datepicker",
        "calendar"
    ],
    "author": "Mauro Reis Vieira <mauroreisvieira@gmail.com>",
    "bugs": {
        "url": "https://github.com/maurovieirareis/hello-week/issues"
    },
    "ignore": [
        "node_modules"
    ],
    "scripts": {
        "dev": "http-server -c0 -g && rollup -c -w",
        "build": "NODE_ENV=production rimraf dist && yarn run lint &&  yarn run prettier && yarn run sass:build && rollup -c --environment NODE_ENV:production",
        "sass:build": "node-sass src/styles/hello-week-theme.scss dist/hello.week.theme.min.css --output-style compressed && node-sass src/styles/hello-week.scss dist/hello.week.min.css --output-style compressed",
        "prettier": "prettier --write --parser typescript \"src/scripts/**/*.ts?(x)\"",
        "lint": "tslint \"src/*.ts\" \"src/**/*.ts\" \"__tests__/**/*.ts\"",
        "test": "jest"
    },
    "gitHooks": {
        "commit-msg": "node scripts/verifyCommit.js"
    },
    "devDependencies": {
        "@babel/core": "7.4.5",
        "@babel/preset-env": "7.4.5",
        "@types/jest": "^24.0.23",
        "babel-jest": "*",
        "jest": "^24.9.0",
        "node-sass": "^4.12.0",
        "prettier": "^1.18.2",
        "rollup": "^1.17.0",
        "chalk": "^2.4.2",
        "rollup-plugin-commonjs": "^10.0.1",
        "rollup-plugin-json": "^4.0.0",
        "rollup-plugin-node-resolve": "^5.2.0",
        "rollup-plugin-typescript2": "^0.22.0",
        "rollup-plugin-uglify-es": "0.0.1",
        "ts-jest": "^24.2.0",
        "tslint": "^5.20.1",
        "typescript": "^3.7.2",
        "yorkie": "^2.0.0"
    }
}
