{
    "name": "hello-week",
    "version": "3.0.0",
    "description": "Lightweight and simple calendar with no dependencies in pure JavaScript",
    "license": "MIT",
    "repository": "https://github.com/maurovieirareis/hello-week",
    "keywords": [
        "lightweight",
        "datepicker",
        "calendar"
    ],
    "author": "Mauro Reis Vieira <mauroreisvieira@gmail.com>",
    "bugs": {
        "url": "https://github.com/maurovieirareis/hello-week/issues"
    },
    "ignore": [
        "node_modules"
    ],
    "scripts": {
        "dev": "rollup -c -w",
        "build": "yarn run lint &&  yarn run prettier && rollup -c --environment NODE_ENV:production",
        "prettier": "prettier --write --parser typescript \"src/scripts/**/*.ts?(x)\"",
        "lint": "tslint \"src/*.ts\" \"src/**/*.ts\" \"__tests__/**/*.ts\"",
        "test": "jest"
    },
    "gitHooks": {
        "commit-msg": "node scripts/verifyCommit.js"
    },
    "devDependencies": {
        "@babel/core": "7.4.5",
        "@babel/preset-env": "7.4.5",
        "@types/jest": "^24.0.23",
        "babel-jest": "*",
        "chalk": "^2.4.2",
        "jest": "^24.9.0",
        "node-sass": "^4.13.0",
        "prettier": "^1.18.2",
        "rollup": "^1.17.0",
        "rollup-plugin-commonjs": "^10.0.1",
        "rollup-plugin-json": "^4.0.0",
        "rollup-plugin-node-resolve": "^5.2.0",
        "rollup-plugin-scss": "^1.0.2",
        "rollup-plugin-serve": "^1.0.1",
        "rollup-plugin-typescript2": "^0.22.0",
        "rollup-plugin-terser": "^4.0.4",
        "ts-jest": "^24.2.0",
        "tslint": "^5.20.1",
        "typescript": "^3.7.2",
        "yorkie": "^2.0.0"
    }
}
